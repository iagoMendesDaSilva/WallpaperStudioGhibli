{
  "compilerOptions": {
    "target": "esnext",       
    "module": "commonjs",         
    "lib": ["es2017"],               
    "allowJs": true,                 
    "jsx": "react-native",                 
    "noEmit": true,                  
    "isolatedModules": true,    
    "strict": true,             
    "allowSyntheticDefaultImports": true,   
    "esModuleInterop": true,    
    "skipLibCheck": false,            
    "resolveJsonModule": true          
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
  ],
  "typeRoots": [
    "../node_modules/@types",
    "../@types"
]
}